# Managed by Nix

# Set default values for all following accounts.
defaults

# Use the mail submission port 587 instead of the SMTP port 25.
# port 587

# Always use TLS.
tls on
auto_from on
logfile ~/.msmtp.log

# Set up Gmail account
account gmail
host smtp.gmail.com
tls on
tls_certcheck off
auth on
from samarthkishor1@gmail.com
user samarthkishor1@gmail.com
passwordeval security find-generic-password -s mbsync-gmail-password -w
port 587

# Set up UVA account
account uva
host smtp.gmail.com
tls on
tls_certcheck off
auth on
from sk4gz@virginia.edu
user sk4gz@virginia.edu
passwordeval security find-generic-password -s mbsync-uva-password -w
port 587
